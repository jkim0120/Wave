<h1>Log In</h1>

<%= form_tag user_sessions_path do %>

  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="field remember-me">
    <%= check_box_tag :remember, params[:remember], true %>
    <%= label_tag :remember, "Remember me" %>
  </div>

  <div class="submit">
    <%= submit_tag "Login" %>
  </div>

<% end %>