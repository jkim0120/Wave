<% if @registered_trackers != 0  %>
  <h3>You currently have <%= pluralize(@registered_trackers, 'unregistered Wave Motion') %></h3>
<% end %>

<% @trackers.each do |tracker| %>
  <div class="tracker">
    <% unless registered? tracker["id"] %>
      <%= form_tag user_trackers_path do %>
        <div class="particle-name">
          <p>Particle Name: <%= tracker["name"] %></p>
        </div>
        <div class="field">
          <%= label_tag :name %>
          <%= text_field_tag :name, nil, placeholder: 'My Wave Motion' %>
          <%= hidden_field_tag :core_id, tracker["id"] %>
        </div>
        <div class="submit">
          <%= submit_tag 'Add' %>
        </div>
      <% end %>
    <% else %>
      <div class="name">
        <p>Name: <%= current_user.trackers.find_by(core_id: tracker["id"]).name %></p>
      </div>
      <div class="submit">
        <div class="modal">
          <%= link_to "Test", test_user_tracker_path(current_user, current_user.trackers.find_by(core_id: tracker["id"]).id), remote: true, 'data-type' => :html %>
          <input class="hidden modal-state" id="modal-1" type="checkbox" />
          <div class="modal-fade-screen">
            <div class="modal-inner">
              <div class="modal-close" for="modal-1"></div>
              <div class="modal-content"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="delete">
        <%= link_to "Delete", user_tracker_path(current_user, current_user.trackers.find_by(core_id: tracker["id"]).id), method: :delete %>
      </div>
    <% end %>
  </div>
<% end %>