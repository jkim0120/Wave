<%= javascript_tag do %>
  $('.field input').keydown(function() {
    if ($(this).val()) {
      $(this).next().css({
        'font-size': '0.8em',
        'bottom': '35px'
      })
    }
  })
<% end %>

<% if @user.errors.any? %>
  <div class="errors">
    <ul class="form-errors">
      <% @user.errors.full_messages.each do |msg| %>
        <li class="error-message"><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= f.text_field :first_name %>
  <%= f.label :first_name %>
</div>

<div class="field">
  <%= f.text_field :last_name %>
  <%= f.label :last_name %>
</div>

<div class="field">
  <%= f.text_field :email %>
  <%= f.label :email %>
</div>

<div class="field">
  <%= f.password_field :password %>
  <%= f.label :password %>
</div>

<div class="field">
  <%= f.password_field :password_confirmation %>
  <%= f.label :password_confirmation %>
</div>

<div class="submit">
  <%= f.submit 'Sign Up', class: :button %>
</div>